{
  "name": "diff2html-report",
  "displayName": "diff2html-report",
  "icon": "assets/icon.png",
  "description": "A Git diff report generator For VSCode using Diff2Html.",
  "version": "0.1.0",
  "license": "MIT",
  "publisher": "Lead007",
  "engines": {
    "vscode": "^1.68.0"
  },
  "homepage": "https://github.com/Lead007/vscode-diff2html-report/blob/main/README.md",
  "bugs": {
    "url": "https://github.com/Lead007/vscode-diff2html-report/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Lead007/vscode-diff2html-report"
  },
  "keywords": [
    "git",
    "diff",
    "report"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.showGitCommit"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "%diff2html-report.configuration.title%",
      "properties": {
        "diff2html-report.filter": {
          "type": "string",
          "default": "",
          "description": "%diff2html-report.configuration.filter%"
        },
        "diff2html-report.encoding": {
          "type": "string",
          "default": "utf8",
          "markdownDescription": "%diff2html-report.configuration.encoding%"
        },
        "diff2html-report.drawLineCount": {
          "type": "boolean",
          "default": true,
          "description": "%diff2html-report.configuration.drawLineCount%"
        },
        "diff2html-report.defaultViewType": {
          "type": "string",
          "enum": [
            "side-by-side",
            "line-by-line"
          ],
          "default": "side-by-side",
          "description": "%diff2html-report.configuration.defaultViewType%"
        },
        "diff2html-report.useOnlineResources": {
          "type": "boolean",
          "default": false,
          "description": "%diff2html-report.configuration.useOnlineResources%"
        }
      }
    },
    "commands": [
      {
        "command": "diff2html-report.generateDiffReport",
        "title": "%diff2html-report.command.generateDiffReport%"
      }
    ],
    "menus": {
      "scm/title": [
        {
          "command": "diff2html-report.generateDiffReport",
          "when": "scmProvider == git",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build": "esbuild src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --minify",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/mustache": "^4.2.6",
    "@types/node": "22.x",
    "@types/vscode": "1.68.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.2",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "diff2html": "^3.4.55",
    "mustache": "^4.2.0",
    "vscode-nls-i18n": "^0.2.4"
  }
}
